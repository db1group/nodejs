{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "npx eslint src/**/*.js",
    "start": "node src/server.js",
    "dev": "cross-env NODE_ENV=test nodemon --inspect src/server.js",
    "pretest": "cross-env NODE_ENV=test sequelize db:migrate",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "posttest": "cross-env NODE_ENV=test sequelize db:migrate:undo:all"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "factory-girl": "^5.0.4",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.0.3",
    "sequelize": "^5.21.7"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "2.20.1",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "sequelize-cli": "^5.5.1",
    "sqlite3": "^4.2.0",
    "supertest": "^4.0.2"
  }
}
